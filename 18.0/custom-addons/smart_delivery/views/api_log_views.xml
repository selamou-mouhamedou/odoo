<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_api_log_tree" model="ir.ui.view">
        <field name="name">api.log.tree</field>
        <field name="model">api.log</field>
        <field name="arch" type="xml">
            <list string="Journaux API" decoration-success="status_code==200" decoration-danger="status_code>=400">
                <field name="client_id"/>
                <field name="endpoint"/>
                <field name="status_code"/>
                <field name="created_at"/>
                <field name="error_message"/>
            </list>
        </field>
    </record>

    <record id="view_api_log_form" model="ir.ui.view">
        <field name="name">api.log.form</field>
        <field name="model">api.log</field>
        <field name="arch" type="xml">
            <form string="Journal API">
                <sheet>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="endpoint"/>
                            <field name="status_code"/>
                            <field name="created_at"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payload">
                            <field name="payload" widget="text"/>
                        </page>
                        <page string="Réponse">
                            <field name="response" widget="text"/>
                        </page>
                        <page string="Erreur" invisible="not error_message">
                            <field name="error_message" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_api_log_search" model="ir.ui.view">
        <field name="name">api.log.search</field>
        <field name="model">api.log</field>
        <field name="arch" type="xml">
            <search string="Rechercher Journaux">
                <field name="client_id"/>
                <field name="endpoint"/>
                <filter string="Succès" name="success" domain="[('status_code', '=', 200)]"/>
                <filter string="Erreur" name="error" domain="[('status_code', '>=', 400)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Endpoint" name="group_endpoint" context="{'group_by': 'endpoint'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_api_log" model="ir.actions.act_window">
        <field name="name">Journaux API</field>
        <field name="res_model">api.log</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_api_log_search"/>
    </record>
</odoo>

