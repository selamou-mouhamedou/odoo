<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===================== BILLING LIST VIEW ===================== -->
    <record id="view_delivery_billing_tree" model="ir.ui.view">
        <field name="name">delivery.billing.tree</field>
        <field name="model">delivery.billing</field>
        <field name="arch" type="xml">
            <list string="Facturation Livraison" 
                  decoration-success="state == 'paid'" 
                  decoration-info="state in ('posted', 'invoiced')"
                  decoration-warning="state == 'partial'"
                  decoration-muted="state == 'cancelled'"
                  multi_edit="1">
                <field name="order_id"/>
                <field name="enterprise_id" string="Entreprise" optional="show"/>
                <field name="receiver_partner_id" string="Payeur"/>
                <field name="distance_km" optional="hide"/>
                <field name="base_tariff" string="Base"/>
                <field name="extra_fee" string="Distance" optional="hide"/>
                <field name="total_amount" sum="Total" string="Total (MRU)"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="invoice_id" optional="show"/>
                <field name="invoice_amount_residual" string="Reste √† Payer" 
                       decoration-danger="invoice_amount_residual > 0"
                       optional="show"/>
                <field name="state" widget="badge" 
                       decoration-info="state in ('draft', 'invoiced')"
                       decoration-primary="state == 'posted'"
                       decoration-warning="state == 'partial'"
                       decoration-success="state == 'paid'"
                       decoration-danger="state == 'cancelled'"/>
                <!-- Quick action buttons -->
                <button name="action_quick_pay_cash" 
                        type="object" 
                        string="Payer" 
                        icon="fa-money"
                        class="btn-success"
                        invisible="state in ('paid', 'cancelled')"/>
            </list>
        </field>
    </record>

    <!-- ===================== BILLING FORM VIEW ===================== -->
    <record id="view_delivery_billing_form" model="ir.ui.view">
        <field name="name">delivery.billing.form</field>
        <field name="model">delivery.billing</field>
        <field name="arch" type="xml">
            <form string="Facturation Livraison">
                <header>
                    <!-- Primary actions based on state -->
                    <button name="action_create_invoice" 
                            string="üìÑ Cr√©er Facture" 
                            type="object" 
                            class="oe_highlight"
                            invisible="invoice_id or state == 'cancelled'"/>
                    
                    <button name="action_post_invoice" 
                            string="‚úì Confirmer Facture" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'invoiced'"/>
                    
                    <button name="action_quick_pay_cash" 
                            string="üíµ Paiement Esp√®ces" 
                            type="object" 
                            class="oe_highlight btn-success"
                            invisible="state in ('paid', 'cancelled', 'draft')"/>
                    
                    <button name="action_register_payment" 
                            string="üí≥ Enregistrer Paiement" 
                            type="object" 
                            class="btn-primary"
                            invisible="state not in ('posted', 'partial')"/>
                    
                    <!-- Secondary actions -->
                    <button name="action_view_invoice" 
                            string="üìã Voir Facture" 
                            type="object" 
                            class="btn-secondary"
                            invisible="not invoice_id"/>
                    
                    <button name="action_send_invoice_by_email" 
                            string="üìß Envoyer par Email" 
                            type="object" 
                            class="btn-secondary"
                            invisible="state not in ('posted', 'paid', 'partial')"/>
                    
                    <button name="action_cancel" 
                            string="Annuler" 
                            type="object"
                            class="btn-secondary"
                            invisible="state in ('paid', 'cancelled')"
                            confirm="√ätes-vous s√ªr de vouloir annuler cette facturation?"/>
                    
                    <button name="action_reset_draft" 
                            string="‚Ü© Remettre en Brouillon" 
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'cancelled'"/>
                    
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,invoiced,posted,paid"/>
                </header>
                
                <sheet>
                    <!-- Smart buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoice" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-file-text-o"
                                invisible="not invoice_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Facture</span>
                                <span class="o_stat_value">
                                    <field name="invoice_name"/>
                                </span>
                            </div>
                        </button>
                        
                        <button name="action_view_payments" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-money"
                                invisible="payment_count == 0">
                            <field name="payment_count" widget="statinfo" string="Paiements"/>
                        </button>
                        
                        <button name="action_open_reconcile" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-link"
                                invisible="state not in ('posted', 'partial')"
                                title="R√©conciliation">
                            <div class="o_stat_info">
                                <span class="o_stat_text">R√©conciliation</span>
                            </div>
                        </button>
                    </div>
                    
                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="order_id" readonly="1" options="{'no_open': False}"/>
                        </h1>
                        <h3 invisible="not invoice_id" class="text-primary">
                            <field name="invoice_name" readonly="1"/>
                        </h3>
                    </div>
                    
                    <!-- Alert for unpaid invoices -->
                    <div class="alert alert-warning" role="alert" 
                         invisible="state != 'posted' or invoice_amount_residual == 0">
                        <strong>‚ö† Montant restant √† payer:</strong> 
                        <field name="invoice_amount_residual" class="fw-bold"/> 
                        <field name="currency_id" invisible="1"/>
                    </div>
                    
                    <!-- Main info -->
                    <group>
                        <group string="üì¶ Informations Commande">
                            <field name="enterprise_id" readonly="1"/>
                            <field name="sender_partner_id" string="Exp√©diteur"/>
                            <field name="receiver_partner_id" string="Destinataire (Payeur)"/>
                        </group>
                        <group string="üí∞ Tarification">
                            <field name="distance_km" string="Distance"/>
                            <label for="base_tariff"/>
                            <div class="o_row">
                                <field name="base_tariff" class="oe_inline"/>
                                <span>MRU</span>
                            </div>
                            <label for="extra_fee"/>
                            <div class="o_row">
                                <field name="extra_fee" class="oe_inline"/>
                                <span>MRU</span>
                            </div>
                            <label for="total_amount"/>
                            <div class="o_row">
                                <field name="total_amount" class="oe_inline fw-bold text-primary"/>
                                <span class="fw-bold">MRU</span>
                            </div>
                        </group>
                    </group>
                    
                    <!-- Invoice details -->
                    <group string="üìã Facture Odoo" invisible="not invoice_id">
                        <group>
                            <field name="invoice_id" readonly="1"/>
                            <field name="invoice_state" widget="badge"
                                   decoration-info="invoice_state == 'draft'"
                                   decoration-success="invoice_state == 'posted'"
                                   decoration-danger="invoice_state == 'cancel'"/>
                        </group>
                        <group>
                            <field name="invoice_amount_total" string="Montant Factur√©"/>
                            <field name="invoice_amount_residual" string="Reste √† Payer"
                                   decoration-danger="invoice_amount_residual > 0"/>
                            <field name="invoice_payment_state" widget="badge"
                                   decoration-danger="invoice_payment_state == 'not_paid'"
                                   decoration-warning="invoice_payment_state in ('partial', 'in_payment')"
                                   decoration-success="invoice_payment_state == 'paid'"/>
                        </group>
                    </group>
                    
                    <!-- Notes -->
                    <group string="üìù Notes" invisible="not notes">
                        <field name="notes" nolabel="1" placeholder="Notes internes..."/>
                    </group>
                    
                    <notebook invisible="not invoice_id">
                        <page string="Instructions Comptabilit√©" name="accounting_help">
                            <div class="alert alert-info">
                                <h4>üîó Int√©gration avec la Comptabilit√© Odoo</h4>
                                <ul>
                                    <li><strong>Cr√©er Facture:</strong> G√©n√®re une facture client dans le module Comptabilit√©</li>
                                    <li><strong>Confirmer Facture:</strong> Valide la facture (g√©n√®re les √©critures comptables)</li>
                                    <li><strong>Paiement Esp√®ces:</strong> Enregistre un paiement COD automatique</li>
                                    <li><strong>Enregistrer Paiement:</strong> Ouvre l'assistant de paiement standard Odoo</li>
                                    <li><strong>R√©conciliation:</strong> Acc√®s direct √† la r√©conciliation des paiements</li>
                                </ul>
                                <p class="mt-2">
                                    <em>Toutes les op√©rations sont synchronis√©es avec le module Comptabilit√© d'Odoo.</em>
                                </p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ===================== BILLING SEARCH VIEW ===================== -->
    <record id="view_delivery_billing_search" model="ir.ui.view">
        <field name="name">delivery.billing.search</field>
        <field name="model">delivery.billing</field>
        <field name="arch" type="xml">
            <search string="Rechercher Facturation">
                <field name="order_id"/>
                <field name="enterprise_id"/>
                <field name="receiver_partner_id"/>
                <field name="invoice_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Factur√©" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                <filter string="Confirm√©" name="posted" domain="[('state', '=', 'posted')]"/>
                <filter string="Pay√©" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Annul√©" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="√Ä Payer" name="to_pay" 
                        domain="[('state', 'in', ['posted', 'partial']), ('invoice_amount_residual', '>', 0)]"/>
                <filter string="Sans Facture" name="no_invoice" domain="[('invoice_id', '=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Entreprise" name="group_enterprise" context="{'group_by': 'enterprise_id'}"/>
                    <filter string="√âtat Paiement" name="group_payment" context="{'group_by': 'invoice_payment_state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ===================== BILLING KANBAN VIEW ===================== -->
    <record id="view_delivery_billing_kanban" model="ir.ui.view">
        <field name="name">delivery.billing.kanban</field>
        <field name="model">delivery.billing</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="order_id"/>
                <field name="enterprise_id"/>
                <field name="total_amount"/>
                <field name="state"/>
                <field name="invoice_id"/>
                <field name="invoice_payment_state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="order_id"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection" 
                                       options="{'classes': {'draft': 'secondary', 'invoiced': 'info', 'posted': 'primary', 'partial': 'warning', 'paid': 'success', 'cancelled': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="enterprise_id"/>
                                <div class="mt-2">
                                    <strong class="text-primary">
                                        <field name="total_amount"/> MRU
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2" t-if="record.invoice_id.raw_value">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge" t-att-class="record.invoice_payment_state.raw_value == 'paid' ? 'bg-success' : 'bg-warning'">
                                        <field name="invoice_payment_state"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ===================== BILLING PIVOT VIEW ===================== -->
    <record id="view_delivery_billing_pivot" model="ir.ui.view">
        <field name="name">delivery.billing.pivot</field>
        <field name="model">delivery.billing</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Facturation">
                <field name="enterprise_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_amount" type="measure"/>
                <field name="distance_km" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ===================== BILLING GRAPH VIEW ===================== -->
    <record id="view_delivery_billing_graph" model="ir.ui.view">
        <field name="name">delivery.billing.graph</field>
        <field name="model">delivery.billing</field>
        <field name="arch" type="xml">
            <graph string="Facturation" type="bar">
                <field name="create_date" type="row" interval="month"/>
                <field name="total_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ===================== ACTION ===================== -->
    <record id="action_delivery_billing" model="ir.actions.act_window">
        <field name="name">Facturation Livraison</field>
        <field name="res_model">delivery.billing</field>
        <field name="view_mode">list,kanban,form,pivot,graph</field>
        <field name="search_view_id" ref="view_delivery_billing_search"/>
        <field name="context">{'search_default_to_pay': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune facturation pour le moment
            </p>
            <p>
                La facturation est cr√©√©e automatiquement lors de la livraison des commandes.
                <br/><br/>
                <strong>Int√©gration Comptabilit√© Odoo:</strong>
                <ul>
                    <li>Factures g√©n√©r√©es dans le module Facturation</li>
                    <li>Paiements via l'assistant standard Odoo</li>
                    <li>R√©conciliation automatique</li>
                    <li>Paiement √† la livraison (COD) uniquement</li>
                </ul>
            </p>
        </field>
    </record>

    <!-- ===================== ACTION: TO PAY ===================== -->
    <record id="action_delivery_billing_to_pay" model="ir.actions.act_window">
        <field name="name">√Ä Encaisser</field>
        <field name="res_model">delivery.billing</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('state', 'in', ['posted', 'partial']), ('invoice_amount_residual', '>', 0)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Toutes les factures sont pay√©es!
            </p>
        </field>
    </record>

    <!-- ===================== SERVER ACTION: QUICK PAY ===================== -->
    <record id="action_billing_quick_pay" model="ir.actions.server">
        <field name="name">Paiement Rapide Esp√®ces</field>
        <field name="model_id" ref="model_delivery_billing"/>
        <field name="binding_model_id" ref="model_delivery_billing"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
for record in records:
    if record.state not in ('paid', 'cancelled'):
        record.action_quick_pay_cash()
        </field>
    </record>

</odoo>
